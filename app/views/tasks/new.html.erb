<h1>New Task</h1>

<%= form_with model: @task, url: tasks_path, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :title, "Title", class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :details, "Details", class: "form-label" %>
    <%= f.text_area :details, class: "form-control", rows: 4 %>
  </div>

  <div class="mb-3 form-check">
    <%= f.check_box :completed, class: "form-check-input" %>
    <%= f.label :completed, "Completed", class: "form-check-label" %>
  </div>

  <%= f.submit "Create Task", class: "btn btn-primary" %>
  <%= link_to "Cancel", tasks_path, class: "btn btn-secondary" %>
<% end %>
