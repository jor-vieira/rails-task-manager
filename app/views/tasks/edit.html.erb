<h1>Edit Task</h1>

<%= form_with model: @task, url: task_path(@task), method: :patch, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :title, "Title", class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :details, "Details", class: "form-label" %>
    <%= f.text_area :details, class: "form-control", rows: 4 %>
  </div>

  <div class="mb-3 form-check">
    <%= f.check_box :completed, class: "form-check-input" %>
    <%= f.label :completed, "Completed", class: "form-check-label" %>
  </div>

  <%= f.submit "Update Task", class: "btn btn-primary" %>
  <%= link_to "Cancel", task_path(@task), class: "btn btn-secondary" %>
<% end %>
